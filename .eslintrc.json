{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended",
    "plugin:@eslint/compat"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@eslint/compat"
  ],
  "rules": {
    "no-undef": "error",
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^_", "argsIgnorePattern": "^_" }],
    "no-redeclare": "off", // Avoid redeclaration errors (e.g., 'data' issue)
    "react/prop-types": "off", // Next.js doesn't need prop-types
    "react/react-in-jsx-scope": "off", // Not needed with Next.js/React 18
    "react/no-unknown-property": ["error", { "ignore": ["jsx", "global"] }],
    "@next/next/no-html-link-for-pages": "error", // Enforce Next.js routing
    "no-console": ["warn", { "allow": ["warn", "error"] }], // Allow warn/error logs
    "@eslint/compat/no-dynamic-require": "off" // Support dynamic imports (e.g., Farcaster SDK)
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "next": {
      "rootDir": "."
    }
  }
}